<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAP1WGUApp.EditTermPage">
    <StackLayout x:Name="AddTermLayout" Padding="10,0" BackgroundColor="#bbbbbd">
        <Label Text="Term Title" TextColor="#131321" FontSize="Large" FontAttributes="Bold"/>
        <Entry x:Name="TermTitle" Keyboard="Text"/>
        <Label Text="Start Date" TextColor="#131321" FontSize="Large" FontAttributes="Bold"/>
        <DatePicker x:Name="StartDatePicker"/>
        <Label Text="End Date" TextColor="#131321" FontSize="Large" FontAttributes="Bold"/>
        <DatePicker x:Name="EndDatePicker"/>
        <Button x:Name="SaveBtn" Text="Save" TextColor="#131321" FontSize="Large" FontAttributes="Bold" VerticalOptions="End" HorizontalOptions="End" Clicked="SaveBtn_Clicked"/>
    </StackLayout>
</ContentPage>