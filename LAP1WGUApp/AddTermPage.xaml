<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAP1WGUApp.AddTermPage">

    <StackLayout x:Name="AddTermLayout" Padding="10,0" BackgroundColor="#bbbbbd">
        <Label Text="Term Title" TextColor="#131321" FontSize="Large" FontAttributes="Bold"/>
        <Entry x:Name="TermTitle" Keyboard="Text" Placeholder="Term Name"/>

        <Label Text="Start Date" TextColor="#131321" FontSize="Large" FontAttributes="Bold"/>
        <DatePicker x:Name="TermStartDatePicker">
            <DatePicker.MinimumDate>
                01/01/1900
            </DatePicker.MinimumDate>
            <DatePicker.MaximumDate>
                12/31/2100
            </DatePicker.MaximumDate>
        </DatePicker>

        <Label Text="End Date" TextColor="#131321" FontSize="Large" FontAttributes="Bold"/>
        <DatePicker x:Name="TermEndDatePicker">
            <DatePicker.MinimumDate>
                01/01/1900
            </DatePicker.MinimumDate>
            <DatePicker.MaximumDate>
                12/31/2100
            </DatePicker.MaximumDate>
        </DatePicker>
        <Button x:Name="AddBtn" Text="Add Term" TextColor="#131321" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Clicked="AddBtn_Clicked"/>
    </StackLayout>
    
</ContentPage>